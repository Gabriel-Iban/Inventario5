@using Inventario5.Shared.clases;

<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">Inventario Informático</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        @foreach (var item in lItemMenu) { 
            <li class="nav-item px-3">
                <NavLink class="nav-link" href="@item.Url">
                    <span class="oi @item.IconName" aria-hidden="true"></span> @item.Texto
                </NavLink>
            </li>

        }
    </ul>
</div>

@code {
    private ItemMenu[] lItemMenu = new ItemMenu[] {
        new ItemMenu("Portátiles","oi-laptop","PortatilFL"),
        new ItemMenu("Estaciones de Trabajo","oi-hard-drive","WorkstationFL"),
        new ItemMenu("Monitores","oi-monitor","MonitorFL"),
        new ItemMenu("Personas","oi-person","PersonaFL"),
        new ItemMenu("Ubicaciones","oi-map-marker","UbicacionFL"),
        new ItemMenu("Marcas y Modelos","oi-flag","MarcaymodeloFL"),
        new ItemMenu("Unidades","oi-resize-width","UnidadFL"),
        new ItemMenu("Procesadores","oi-vertical-align-top","ProcesadorFL"),
        new ItemMenu("Búsquedas","oi-magnifying-glass","Busquedas"), 
        new ItemMenu("Inicializar BD","oi-list","InicializarBD") };

    private bool collapseNavMenu = true;

    private string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu() {
        collapseNavMenu = !collapseNavMenu;
    }
}
